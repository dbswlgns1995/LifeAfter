<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hwlife">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HwLife">
        <activity android:name=".activity.MapLevelActivity"></activity>
        <activity android:name=".activity.TipRequestActivity" />
        <activity android:name=".activity.TipActivity" />
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.GatheringActivity" />
        <activity android:name=".activity.MapActivity" />
        <activity android:name=".activity.HWSettingActivity" />
        <activity android:name=".activity.HWActivity" />
        <activity android:name=".activity.AlarmActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>